<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>登录 - Jin's ASP.NET Web Application</title>
    <style>
        input {
            height:40px;
        }
    </style>
    <script src="../Scripts/jquery-3.5.1.js"></script>
    <script>
        $(function () {
            $("#btn-login").click(function () {
                var username = $("#text-username").val();
                var password = $("#text-password").val();
                if (username == "") {
                    alert("请输入用户名");
                    return;
                }
                if (password == "") {
                    alert("请输入密码");
                    return;
                }
                $.post("/Ashx/Login.ashx",
                    {
                        username: username,
                        password: password
                    },
                    function (data, status) {
                    if (data == "登录成功") {
                        $(location).attr("href", "Index.cshtml?username=" + username);
                    } else {
                        alert("登录失败，请检查用户名和密码");
                    }
                });
            });
        });
    </script>
</head>
<body>
    <div class="login">
        <h1>用户登录</h1>
        <p><input type="text" name="username" id="text-username" placeholder="输入用户名" /></p>
        <p><input type="password" name="password" id="text-password" placeholder="输入密码" /></p>
        <p><button id="btn-login">登录</button></p>
    </div>
</body>
</html>